<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/UTA_orange"
    tools:context=".ModifyAttributes">

    <TextView
        android:id="@+id/additemTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="CHANGE ATTRIBUTES FOR"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/MA_name_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:text="Name (Unchangeable): "
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/MA_loc_TextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="153dp"
        android:gravity="center"
        android:text="Location"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/MA_open_TextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="215dp"
        android:gravity="center"
        android:text="Open Time"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/MA_close_TextView"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="3dp"
        android:layout_marginTop="265dp"
        android:gravity="center"
        android:text="Close Time"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/MA_open_EditText"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="197dp"
        android:background="@android:color/white"
        android:hint="Enter in 24:00 Format"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/MA_loc_EditText"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="108dp"
        android:layout_marginTop="142dp"
        android:background="@android:color/white"
        android:hint="Change Restaurant Location"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/MA_close_EditText"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:background="@android:color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="109dp"
        android:layout_marginTop="250dp"
        android:hint="Enter in 24:00 Format"
        android:textSize="20sp" />

    <Button
        android:id="@+id/confirmChange_Button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="200dp"
        android:layout_marginTop="320dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Confirm" />

    <Button
        android:id="@+id/MA_exit_Button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="89dp"
        android:layout_marginTop="319dp"
        android:background="@android:color/holo_red_light"
        android:text="Exit" />

</RelativeLayout>