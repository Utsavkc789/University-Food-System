<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchByLocation">

    <Button
        android:id="@+id/search_by_name_Button"
        android:layout_width="95dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="185dp"
        android:layout_marginTop="81dp"
        android:text="By Name" />

    <Button
        android:id="@+id/search_by_item_Button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="82dp"
        android:text="By Item" />

    <Button
        android:id="@+id/search_by_location_homeButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="285dp"
        android:layout_marginTop="81dp"
        android:text="Home" />

    <Button
        android:id="@+id/filter_Button"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="290dp"
        android:layout_marginTop="20dp"
        android:background="@android:color/holo_orange_dark"
        android:text="Filter" />

    <ListView
        android:id="@+id/location_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="145dp"
        android:divider="@android:color/white"
        android:dividerHeight="2dp"
        tools:listitem="@android:layout/simple_list_item_1" />

    <TextView
        android:id="@+id/restaurantname_textView_id"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="86dp"
        android:text="Searching by Location" />

    <EditText
        android:id="@+id/location_EditText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:hint="Enter Location"
         />

</RelativeLayout>