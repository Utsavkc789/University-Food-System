<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemLookup">

    <ImageView
        android:layout_width="245dp"
        android:layout_height="155dp"
        android:layout_marginStart="180dp"
        android:layout_marginTop="33dp"
        android:contentDescription="generic food item"
        android:src="@drawable/generic_fooditem" />

    <TextView
        android:id="@+id/itemLKname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@android:color/holo_orange_dark"
        android:text="MENU ITEM NAME"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/itemLKdesc"
        android:layout_width="300dp"
        android:layout_height="90dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="190dp"
        android:text="MENU ITEM DESCRIPTION"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/promoLKdesc"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="285dp"
        android:text="PROMO DESCRIPTION"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <TextView
        android:id="@+id/itemLKprice"
        android:layout_width="145dp"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="85dp"
        android:text="MENU ITEM PRICE"
        android:textColor="@color/black"
        android:textSize="17sp" />

    <Button
        android:id="@+id/Lookup_Back_Button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_dark"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="195dp"
        android:layout_marginTop="350dp"
        android:text="Back to Menu" />

    <Button
        android:id="@+id/delete_this_Button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="95dp"
        android:layout_marginTop="350dp"
        android:background="@android:color/holo_red_light"
        android:text="Delete Item" />

</RelativeLayout>