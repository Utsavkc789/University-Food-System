<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchByItem">

    <Button
        android:id="@+id/SITEM_SBN_Button"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="193dp"
        android:layout_marginTop="81dp"
        android:background="@android:color/holo_blue_dark"
        android:text="By Name" />

    <Button
        android:id="@+id/SITEM_SBL_Button"
        android:layout_width="95dp"
        android:layout_height="55dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="94dp"
        android:layout_marginTop="80dp"
        android:background="@android:color/holo_blue_dark"
        android:text="By Location" />

    <Button
        android:id="@+id/search_by_item_homeButton"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="280dp"
        android:layout_marginTop="81dp"
        android:background="@android:color/holo_blue_dark"
        android:text="Home" />

    <Button
        android:id="@+id/SITEM_filter_Button"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:background="@android:color/holo_orange_dark"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="290dp"
        android:layout_marginTop="20dp"
        android:text="Filter" />

    <ListView
        android:id="@+id/SITEM_listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_marginTop="145dp"
        android:divider="@android:color/white"
        android:dividerHeight="2dp"
        tools:listitem="@android:layout/simple_list_item_1" />

    <TextView
        android:id="@+id/SITEM_textView_id"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="86dp"
        android:text="Searching by Item" />

    <EditText
        android:id="@+id/SITEM_EditText"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:hint="Enter an Item" />

</RelativeLayout>